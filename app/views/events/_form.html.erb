  <div class="container">
    <div class="row">
      <div class="col-md-7">

          <%= form_with(model: event, local: true) do |form| %>
            <% if event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                <% event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group row">
              <label for="event_title" class="col-sm-2 col-form-label">Event</label>
                <div class="col-sm-10">
                  <input type="text" name="event[title]" class="form-control">
                </div>
            </div>

            <div class="additional_info">
              <div class="form-group row">
                <label for="evet_description" class="col-sm-2 col-form-label">Additional info</label>
                <div class="col-sm-10">
                  <textarea class="form-control" name="event[description]" rows="5" id="event_description"></textarea>
                </div>
              </div>
            </div>


      <%= bootstrap_form_for(@event) do |form| %>
        <div class="form-group row">
          <div class="col-sm-10 d-flex">
           <%= form.datetime_select :start_time, id: :event_start_time, control_class: "custom-class" %>
          </div>
        </div>


        <div class="field">
          <%= form.datetime_select :end_time, {}, wrapper_class: 'abc', control_class: "form-control", id: :event_end_time %>
        </div>


        <div class="form-group row">
          <label for="event_title" class="col-sm-2 col-form-label">Location</label>
            <div class="col-sm-10">
              <input type="text" name="event[location]" class="form-control" id="event_location">
            </div>
        </div>

      </div>

    </div>
  </div>

  <div class="row" style="margin: auto">
    <button type="submit" class="btn btn-primary" name="commit" style="margin: auto">SAVE & CLOSE</button>
  </div>
    <% end %>
<% end %>
