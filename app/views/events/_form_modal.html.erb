<div class="container" style="background-color:whitesmoke;box-shadow: 2px 2px 2px #888888;">
  <div class="row justify-content-center" style="padding: 20px;margin-top: 20px;margin-bottom: 30px;border-radius: 10px;">
    <div class="col-md-12">


        <%= form_with(model: event, local: true) do |form| %>
          <% if event.errors.any? %>
            <div id="error_explanation">
              <ul>
              <% event.errors.full_messages.each do |message| %>
                <li style="color: red;"><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>



    <%= bootstrap_form_for(@event) do |form| %>

    <div class="form-group">
      <div class="col-sm-10">
       <%= form.text_field :title, label: 'Event', placeholder: "Enter your event" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
       <%= form.text_field :description, placeholder: "Please enter additional information" %>
      </div>
    </div>

      <div class="form-group">
        <div class="col-sm-10">
         <%= form.datetime_select :start_time, id: :event_start_time, placeholder: "Start Time"  %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
        <%= form.datetime_select :end_time, {}, wrapper_class: 'abc', control_class: "form-control", id: :event_end_time %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
       <%= form.text_field :location, placeholder: "Please enter location" %>
      </div>
    </div>

    </div>

    <!-- Users Section -->
    <!-- <div class="col-sm-10">
      <div class="card">
        <div class="card-body">
          USERS INFORMATION
        </div>
      </div>
    </div> -->

  </div>
</div>


<div class="container">
  <div class="row" style="margin: auto">
    <button type="submit" class="btn btn-primary" name="commit" style="margin: auto;width: 100%">SAVE & CLOSE</button>
  </div>
</div>
  <% end %>
<% end %>
