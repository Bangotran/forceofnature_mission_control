<!DOCTYPE html>
<html>
  <head>
    <title>TeamOneProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type='text/javascript' src='fullcalendar/gcal.js'></script>

  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Logo -->
        <div class=“row” style="background-color:#4576ff;">
              <%= image_tag("logo.png", width: "200px", height: "50px%", color: "black") %>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <!-- <%= link_to('MISSION CONTROL', root_path, class: "navbar-brand") %> -->
            <li class="nav-item">
              <%= link_to('Command Centre', root_path, class: "nav-link") %>
            </li>
            <li class="nav-item">
              <%= link_to('Space Calendar', events_path, class: "nav-link") %>
            </li>
            <!-- <li class="nav-item">
              <%= link_to('Personnel', root_path, class: "nav-link") %>
            </li>
            <li class="nav-item">
              <%= link_to('Missions', root_path, class: "nav-link") %>
            </li>
            <li class="nav-item">
              <%= link_to('Briefings', root_path, class: "nav-link") %>
            </li> -->
            <li class="nav-item">
              <%= link_to('Slack', "http://www.slack.com", class: "nav-link", target: "blank") %>
            </li>
          </ul>
          <!-- If user signed in -->
          <% if user_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to('New Event', new_event_path, class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link_to('Account', edit_user_registration_path, class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link_to('Sign out', destroy_user_session_path, :method => :delete, class: "nav-link") %>
              </li>
          </ul>
          <% else %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to('Sign in', new_user_session_path, class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link_to('Sign up', new_user_registration_path, class: "nav-link") %>
              </li>
            </ul>
          <% end %>

        </div>
      </nav>

    <%= yield %>
  </body>
</html>
